%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-text_field
    = f.label :first_name
    = f.text_field :first_name, class: "form-control"

    = f.label :last_name
    = f.text_field :last_name, class: "form-control"

    = f.label :phone_number
    = f.text_field :phone_number, class: "form-control"

    = f.label :dawgtag
    = f.text_field :dawgtag, class: "form-control"

    = f.label :email
    = f.text_field :email, required: true, autofocus: true, class: "form-control"

    = f.label :password
    = f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control"

    = f.label :password_confirmation
    = f.password_field :password_confirmation, required: true, class: "form-control"
  .form-actions
    = f.button :submit, "Sign up"
= render "devise/shared/links"
